{
  "name": "warmpath",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "bun run --cwd apps/client dev",
    "dev:server": "bun run --cwd apps/server dev",
    "build:client": "bun run --cwd apps/client build",
    "dev:single-origin": "bun run build:client && bun run dev:server",
    "typecheck:server": "bun run --cwd apps/server typecheck",
    "typecheck:client": "bun run --cwd apps/client typecheck",
    "test:server": "bun run --cwd apps/server test",
    "demo": "./demo.sh"
  }
}
